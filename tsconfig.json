{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ESNext", "DOM"],
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"declaration": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noImplicitOverride": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": ["src"]
}
